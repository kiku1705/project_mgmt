<div class="panel panel-primary">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label class="control-label col-md-3">New Project
          </label>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="container-fluid"> 
      <%= form_for(Project.new, :url => projects_path, method: 'POST') do |f| %>
          <%= render 'form', :f=>f %>
        <div class="form-actions fluid">
          <div class="row">
            <div class="col-md-6">
              <div class="col-md-offset-3 col-md-9">
                <%=f.submit "Create", class: "btn green lazy-submit" %>
              </div>
            </div>
            <div class="col-md-6"></div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
