<% if current_user %>
  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Manage Project</a>
      </div>
      <ul class="nav navbar-nav">
        <% if current_user.role. project_manager? %>
          <li><%= link_to('Home', projects_path,method: :get, class: 'active') %> </li>
        <% else %>
          <li><%= link_to('Home', developer_dashboard_user_path(current_user), class: 'active') %> </li>
        <% end %>
        <% if current_user.role. project_manager? %>
          <li><%= link_to('Create Project', new_project_path) %> </li>
          <li><%= link_to('Create Task', new_task_path) %> </li>
          <li><%= link_to('Chart', chart_projects_path) %> </li>
        <% else %>
          <li><%= link_to('Update Task', tasks_path) %> </li>
        <% end %>
        <% if user_signed_in? %>
          <li> <%= link_to('Logout', destroy_user_session_path) %> </li>
        <% end %>
      </ul>
    </div>
  </nav>
<% end %>